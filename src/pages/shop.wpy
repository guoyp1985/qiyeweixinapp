                      </view>
                    </view>
                    <view class="txt" style="{{selectedIndex == (index * colCount + index1) ? themeObject.colorStyle : ''}}">{{item.title}}</view>
                  </view>
                </view>
              </repeat>
            </swiper-item>
          </repeat>
        </swiper>
